{
  "type": "APL",
  "version": "1.4",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.2.0"
    },
    {
      "name": "alexa-styles",
      "version": "1.0.0"
    }
  ],
  "resources": [
    {
      "description": "Stock color for the dark theme",
      "colors": {
        "colorTextPrimary": "#f0f1ef"
      }
    },
    {
      "description": "Standard font sizes",
      "dimensions": {
        "textSizeDetails": 20
      }
    }
  ],
  "styles": {
    "textStyleBase": {
      "description": "Base font description; set color",
      "values": [
        {
          "color": "@colorTextPrimary"
        }
      ]
    },
    "textStyleBase2": {
      "description": "Regular version of basic font",
      "extend": "textStyleBase",
      "values": {
        "fontWeight": "200"
      }
    },
    "mixinDetails": {
      "values": {
        "fontSize": "@textSizeDetails"
      }
    },
    "textStyleDetails": {
      "extend": [
        "textStyleBase2",
        "mixinDetails"
      ]
    }
  },
  "layouts": {
    "mainLayout": {
      "parameters": [
        "backgroundImage",
        "title",
        "logo",
        "movies",
        "hintText"
      ],
      "item": [
        {
          "type": "Container",
          "width": "100%",
          "height": "100%",
          "alignItems": "center",
          "justifyContent": "center",
          "items": [
            {
              "type": "Image",
              "source": "${backgroundImage}",
              "scale": "best-fill",
              "width": "100%",
              "height": "100%",
              "position": "absolute"
            },
            {
              "type": "AlexaHeader",
              "headerTitle": "${title}",
              "headerAttributionImage": "${logo}"
            },
            {
              "type": "Pager",
              "id": "moviesPager",
              "width": "100vw",
              "height": "70vh",
              "item": [
                {
                  "type": "moviesListLayout",
                  "title": "${data.title}",
                  "releaseDate": "${data.releaseDate}",
                  "image": "${data.image}"
                }
              ],
              "data": "${movies}"
            },
            {
              "type": "AlexaFooter",
              "hintText": "${hintText}",
              "when": "${viewport.shape != 'round'}"
            }
          ]
        }
      ]
    },
    "moviesListLayout": {
      "parameters": [
        "title",
        "releaseDate",
        "image"
      ],
      "item": [
        {
          "when": "${viewport.shape == 'round'}",
          "type": "Frame",
          "width": "auto",
          "height": "auto",
          "items": [
            {
              "type": "Container",
              "width": "100vw",
              "height": "100vh",
              "alignItems": "center",
              "items": [
                {
                  "type": "AlexaImage",
                  "imageWidth": "50vw",
                  "imageHeight": "40vh",
                  "align": "center",
                  "imageSource": "${image}"
                },
                {
                  "type": "Text",
                  "style": "textStyleDetails",
                  "text": "${title}",
                  "fontWeight": "bold"
                },
                {
                  "type": "Text",
                  "text": "${releaseDate}",
                  "style": "textStyleDetails",
                  "fontWeight": "300"
                }
              ],
              "justifyContent": "start"
            }
          ]
        },
        {
          "type": "Frame",
          "height": "auto",
          "width": "auto",
          "items": [
            {
              "type": "Container",
              "width": "100vw",
              "height": "70vh",
              "alignItems": "stretch",
              "items": [
                {
                  "type": "AlexaImage",
                  "imageWidth": "50vw",
                  "imageHeight": "70vh",
                  "imageSource": "${image}"
                },
                {
                  "type": "Container",
                  "width": "50vw",
                  "height": "70vh",
                  "item": [
                    {
                      "type": "Text",
                      "style": "textStyleDisplay5",
                      "text": "${title}",
                      "fontStyle": "normal",
                      "fontSize": "40dp",
                      "fontWeight": "bold"
                    },
                    {
                      "type": "Text",
                      "text": "${releaseDate}",
                      "style": "textStyleDetails",
                      "fontWeight": "300"
                    }
                  ],
                  "alignItems": "center",
                  "justifyContent": "center"
                }
              ],
              "direction": "row"
            }
          ]
        }
      ]
    }
  },
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "item": [
      {
        "backgroundImage": "${payload.templateMetadata.backgroundUrl}",
        "title": "${payload.templateMetadata.title}",
        "logo": "${payload.templateMetadata.logoUrl}",
        "movies": "${payload.movies.newReleases}",
        "hintText": "${payload.footerData.properties.hintText}",
        "type": "mainLayout"
      }
    ]
  }
}